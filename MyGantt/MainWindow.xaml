<Window x:Class="MyGantt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:nGantt="clr-namespace:nGantt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Background="#FF23D3F4" >
        <Border  CornerRadius="50" Margin="10" Background="#FFDDE8A5" BorderBrush="#FFDC2121" BorderThickness="3">
            <nGantt:GanttControl x:Name="nGanttChart" Height="400" Margin="10"></nGantt:GanttControl>
        </Border>

    </Grid>
</Window>
